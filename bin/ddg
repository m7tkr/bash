#!/usr/bin/env bash

# author: m7tkr
# purpose: ddg search using lynx
# last modified: 20230620221558
# usage: ddg <query>

query=$*

# set default lynx command, cause alias won't be recognized
lynx="lynx -cfg $HOME/lynx.cfg -lss $HOME/mmono.lss -nopause -noreferer"

$lynx "https://duckduckgo.com/?t=ffab&q=$query"
